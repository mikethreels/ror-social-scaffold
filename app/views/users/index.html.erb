<section class="users-section">
  <%= @confirmed_friends %>
  <%= @pending_friends %>
  <h2>All Users</h2>
  <ul class="users-list">
    <% @users.each do |user| %>
      <li>
        Name: <%= user.name %>
        <span class="profile-link">
          <%= link_to 'See Profile',  user_path(user), class: 'profile-link' %>
          <%unless (@confirmed_friends + @pending_friends).include?(user.id) || user.id == current_user.id%>
            <%= button_to 'invite', invite_path, method: :post, params: { friend_id: user.id } %>
          <% end %>
        </span>
      </li>
    <% end %>
  </ul>
</section>
